<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="customerDAO" class="vn.edu.rmit.common.databaseHandler.BasicCustomerDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="drugDAO" class="vn.edu.rmit.common.databaseHandler.BasicDrugDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="serviceDAO" class="vn.edu.rmit.common.databaseHandler.BasicServiceDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

</beans>